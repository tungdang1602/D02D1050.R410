            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView AutoWidth="True" ShowColumnHeaders="True" ShowAutoFilterRow="True"  ShowVerticalLines="True" ShowHorizontalLines="True" ShowIndicator="False"/>
            </dxg:GridControl.View>
        </L3:L3GridControl>
    </ControlTemplate>

